<div class="page-header">
  <h3>Dish #<%= @dish.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @dish.name %></dd>

      <dt>Cuisine</dt>

      <dd><%= @dish.cuisine.name%></dd>

      <dt>Favorites</dt>

      <dd>
  <table class="table table-striped table-hover">
      <tr>
        <th>Venue</th>
        <th>User</th>
      </tr>
      <% @dish.favorites.each do |favorite| %>
      <tr>
        <td>
        <% if favorite.venue.present? %>
        <%= favorite.venue.name %>
        <% else %>
         No venues
         <% end %>
        </td>
        <td>
      <% if favorite.user.present? %>
       <%= favorite.user.username %>
        <% else %>
         No users
         <% end %>
        </td>
      </tr>
      <% end %>
    </table>
      </dd>

   </dl>

   <div class="btn-group btn-group-justified">
    <a href="/dishes" class="btn btn-primary">
      Back
    </a>
    <a href="/dishes/<%= @dish.id %>/edit" class="btn btn-warning">
      Edit
    </a>
    <a href="/delete_dish/<%= @dish.id %>" class="btn btn-danger" rel="nofollow">
      Delete
    </a>
  </div>
</div>
</div>
